@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-lg border-0 rounded-4 text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                    </div>
                    <h3 class="mb-3 text-success">Password Reset Successful!</h3>
                    <p class="text-muted mb-4">You can now log in with your new password.</p>
                    <a href="/Account/Login" class="btn btn-primary rounded-3 px-4">Go to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
