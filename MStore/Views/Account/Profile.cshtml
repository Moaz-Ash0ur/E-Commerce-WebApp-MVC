@model UserProfileVm


<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 p-4 bg-white">
        <div class="row g-4 align-items-center">

            <!-- صورة أو الأحرف الأولى -->
            <div class="col-md-4 text-center">
                <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center mx-auto"
                     style="width: 120px; height: 120px; font-size: 40px;">
                    @Model.FirstName?[0]@Model.LastName?[0]
                </div>
                <h5 class="mt-3">@Model.FirstName @Model.LastName</h5>
            </div>

            <div class="col-md-8">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                else if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded-3 border d-flex align-items-start">
                            <i class="bi bi-envelope text-primary fs-4 me-3"></i>
                            <div>
                                <div class="fw-bold small text-muted">Email</div>
                                <div>@Model.Email</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded-3 border d-flex align-items-start">
                            <i class="bi bi-telephone text-primary fs-4 me-3"></i>
                            <div>
                                <div class="fw-bold small text-muted">Phone</div>
                                <div>@Model.PhoneNumber</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded-3 border d-flex align-items-start">
                            <i class="bi bi-geo-alt text-primary fs-4 me-3"></i>
                            <div>
                                <div class="fw-bold small text-muted">Address</div>
                                <div>@Model.Address</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="p-3 bg-light rounded-3 border d-flex align-items-start">
                            <i class="bi bi-calendar-check text-primary fs-4 me-3"></i>
                            <div>
                                <div class="fw-bold small text-muted">Joined</div>
                                <div>@Model.CreatedAt.ToString("dd MMM yyyy")</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- أزرار التحكم -->
                <div class="mt-4 text-end">
                    <button class="btn btn-outline-primary me-2" data-bs-toggle="modal" data-bs-target="#EditProfileModal">
                        <i class="bi bi-pencil-square me-1"></i> Edit Profile
                    </button>

                    <a class="btn btn-outline-warning" asp-controller="Account" asp-action="EditPassword">
                        <i class="bi bi-shield-lock me-1"></i> Change Password
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Edit Profile Modal -->
<div class="modal fade" id="EditProfileModal" tabindex="-1" aria-labelledby="EditProfileLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="EditProfile">
                <div class="modal-header">
                    <h5 class="modal-title" id="EditProfileLabel">Edit Profile</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">

                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                       <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" asp-for="Email" class="form-control" />
@*                          <input type="hidden"  asp-for="@Model.Email" />
 *@                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Save Changes</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

