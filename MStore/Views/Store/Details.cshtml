@model ProductDetailsVM

@{
    ViewData["Title"] = "Product Details";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg p-4">
                <div class="row align-items-center">
                    <!-- الصورة -->
                    <div class="col-md-5 text-center mb-3">
                        <img src="~/images/products/@Model.Image" class="img-fluid rounded" alt="@Model.Name" style="max-height: 300px;" />
                    </div>

                    <!-- التفاصيل -->
                    <div class="col-md-7">
                        <h2 class="mb-3 text-primary">@Model.Name</h2>
                        <h4 class="mb-3 text-success">@Model.Price$</h4>

                        <button type="button"
                                class="btn btn-warning btn-sm mb-2 add-to-cart-btn"
                                data-product-id="@Model.ProductID">
                            Add to Cart <i class="bi bi-cart4"></i>
                        </button>


                        <hr />

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold text-muted">Brand:</div>
                            <div class="col-sm-8">@Model.Brand</div>
                        </div>

                        <div class="row mb-2">
                            <div class="col-sm-4 fw-bold text-muted">Category:</div>
                            <div class="col-sm-8">@Model.Category</div>
                        </div>

                        <div class="mt-4">
                            <div class="fw-bold text-muted">Description:</div>
                            <div class="text-break" style="white-space: pre-line;">@Model.Description</div>
                        </div>

                        <div class="mt-4">

                            <a class="btn btn-primary btn-sm mb-2"
                               href="@ViewBag.ReturnUrl">Go Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
