    <style>
        .sidebar {
            width: 240px;
            min-height: 100vh;
            background-color: #343a40;
            color: #fff;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            .sidebar a {
                color: #ddd;
                text-decoration: none;
                padding: 10px;
                border-radius: 5px;
                transition: all 0.2s ease-in-out;
                margin-bottom: 5px;
            }

                .sidebar a.active,
                .sidebar a:hover {
                    background-color: #495057;
                    color: #fff;
                }

        .main {
            padding: 30px;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        @@media (max-width: 768px) {
            .sidebar

        {
            width: 100%;
        }

        .main {
            padding: 15px;
        }

        }
    </style>


</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column p-3">
            <h4 class="text-white mb-4">Admin Panel</h4>
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">Dashboard</a>
            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")">Categories</a>
            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">Products</a>
            <a asp-area="Admin" asp-controller="Orders" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Orders" ? "active" : "")">Orders</a>
            <a asp-area="Admin" asp-controller="Users" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">Users</a>
            <hr class="text-white" />
            <a href="/">Back to Site</a>
        </div>

        <!-- Main Content -->
        <div class="main flex-grow-1">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2></h2>
                <a class="btn btn-outline-secondary" href="~/Account/Logout">Logout</a>
            </div>
            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- SweetAlert2 CDN -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
